<div class="register__header tw-flex tw-items-center tw-font-tofino tw-relative">
    {% if section.settings.background_image %}
        <img class="tw-absolute tw-top-0 tw-left-0 tw-w-full tw-h-full tw-object-cover tw-z-0" src="{{ section.settings.background_image | img_url: '2000x' }}" alt="{{ section.settings.background_image.alt }}">
    {% endif %}
    <div class="tw-px-4 tw-pb-20 tw-pt-32 md:tw-py-0 md:tw-px-6 tw-container tw-mx-auto tw-flex tw-flex-col md:tw-flex-row md:tw-justify-between tw-h-full tw-items-center tw-relative tw-z-10">
        <div class="md:tw-w-1/2 tw-mb-10 md:tw-mb-0">
            <h1 class="md:tw-text-7xl lg:tw-text-8xl tw-font-black tw-font-tofino tw-text-6xl tw-text-white tw-tracking-tight tw-uppercase">{{ section.settings.title }}</h1>
        </div>

        <div class="md:tw-w-1/3 lg:tw-w-1/4">
            <div id="order-summary"></div>
        </div>
    </div>
</div>
{% schema %}
{
    "name": "Header",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Welcome<br>To iFIT Summit Push."
        },
        {
            "type": "image_picker",
            "id": "background_image",
            "label": "Background Image"
        }
    ]
}
{% endschema %}